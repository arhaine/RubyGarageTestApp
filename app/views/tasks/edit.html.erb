<div class="text-center">
  <h1>New Task</h1>

<% @task.errors.each do |attr, message| %>
  <p class="label label-important text-error"><%= attr.capitalize %> <%= message %></p>
<% end if @task %>

<%= form_for(@task, class: "form-horizontal") do |f| %>
  <div class="centered">
    <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "span6 form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :description, class: "control-label" %>
        <%= f.text_area :description, class: "span6 form-control" %>
    </div>
    <div class="form-group">
        <%= f.label :priority, class: "control-label" %>
        <%= f.text_field :priority, class: "span6 form-control" %>
    </div>
  </div>
    <div class="form-group">
        <%= f.label :deadline, class: "control-label" %>
        <%= f.date_select :deadline, {}, {:class => "span2 form-control"} %>
    </div>
    <div class="form-group">
        <%= button_tag'Confirm', class:'btn btn-primary', type:'submit'%>
    </div>
<% end %>
</div>
