<% @projects_all.each do |project| %>
<div class="span8 centered">
    <table class="table table-striped table-bordered table-hover table-nonfluid">
      <tr>
        <td width="100%" colspan="2">
            <%= project.name %>
        </td>
        <td>
            <div class="btn-group">
              <%= link_to(edit_project_path(project.id), class: "btn") do %>
                  <i class="icon-pencil"></i>
              <% end %>
              <%= link_to(project_path(project.id), :method => :delete, class: "btn") do %>
                  <i class="icon-trash"></i>
              <% end %>
            </div>
        </td>
      </tr>
      <tr>
        <td colspan="3">
          <%= form_tag("/tasks", method: 'post', class: "form-inline input-append magick") do %>
              <%= text_field_tag(:name, "", placeholder: 'Please enter your task here', class: 'span7') %>
              <%= hidden_field_tag(:project_id, project.id) %>
              <%= button_tag('Add Task', class:'btn', type:'submit') %>
          <% end %>
        </td>
      </tr>
      <% project.tasks.order("priority DESC").each do |task| %>
          <tr>
            <td class="small-width15"><input type="checkbox" <% task.is_completed ? "checked" : "" %> ></td>
            <td><%= task.name %></td>
            <td>

              <div class="btn-group">
                <%= link_to(edit_task_path(project.id), class: "btn") do %>
                    <i class="icon-pencil"></i>
                <% end %>
                <%= link_to(task_path(project.id), :method => :delete, class: "btn") do %>
                    <i class="icon-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
      <% end %>
    </table>
<% end %>
<div class="text-center">
  <%= link_to 'Add New Project', new_project_path, class: "btn btn-success btn-large" %>
</div>
</div>